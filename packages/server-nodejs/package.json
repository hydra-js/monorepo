{
  "name": "hydra-server-nodejs",
  "version": "1.0.0-alpha.0",
  "description": "Hydra Nodjs Server",
  "main": "./dist/index.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "node ./dist/index.js",
    "start:dev": "nodemon --exec ts-node ./index.js",
    "prebuild": "rm -rf ./dist",
    "build": "tsc",
    "postbuild": "cp -r views dist/ && cp -r public dist/"
  },
  "license": "UNLICENSED",
  "nodemonConfig": {
    "ignore": [
      "dist/*"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "handlebars": "^4.7.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@babel/register": "^7.23.7",
    "@types/babel__register": "^7.17.3",
    "@types/express": "^4.17.21",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "babel-cli": "^6.26.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
